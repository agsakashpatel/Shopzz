<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/ll_parent_margin_top"
    android:orientation="vertical"
    android:focusable="true"
    android:id="@+id/llParent"
    android:focusableInTouchMode="true"
    tools:context=".activity.RequestForVendorActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_header_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divider_height"
        android:background="@color/color_7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_toolbar"
        android:layout_marginLeft="@dimen/ll_rigestration_margin_left_right"
        android:layout_marginRight="@dimen/ll_rigestration_margin_left_right"
        android:layout_marginTop="@dimen/ll_rigestration_margin_left_right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|left"
                android:layout_marginRight="@dimen/ll_name_margin_left_right"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_registration_text_margin_top"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/str_first_name"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/all_registration_text_size" />

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/all_edittext_input_background"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|start"
                    android:hint="@string/str_enter_first_name"
                    android:imeOptions="actionNext"
                    android:maxLength="25"
                    android:paddingBottom="@dimen/et_name_padding_bottom"
                    android:singleLine="true"
                    android:textColor="@color/color_login_email_input"
                    android:textSize="@dimen/all_registration_hint_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|right"
                android:layout_marginLeft="@dimen/ll_name_margin_left_right"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_registration_text_margin_top"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/str_last_name"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/all_registration_text_size" />

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/all_edittext_input_background"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|start"
                    android:hint="@string/str_enter_last_name"
                    android:imeOptions="actionNext"
                    android:maxLength="25"
                    android:paddingBottom="@dimen/et_name_padding_bottom"
                    android:singleLine="true"
                    android:textColor="@color/color_login_email_input"
                    android:textSize="@dimen/all_registration_hint_text_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_registration_text_margin_top"
            android:fontFamily="@font/lato_regular"
            android:text="@string/str_mobile_number"
            android:textColor="@color/color_1"
            android:textSize="@dimen/all_registration_text_size" />

        <EditText
            android:id="@+id/etMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/all_edittext_input_background"
            android:fontFamily="@font/lato_regular"
            android:gravity="left|start"
            android:hint="@string/str_enter_your_mobile_number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:paddingBottom="@dimen/et_name_padding_bottom"
            android:singleLine="true"
            android:textColor="@color/color_login_email_input"
            android:textSize="@dimen/all_registration_hint_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_registration_text_margin_top"
            android:fontFamily="@font/lato_regular"
            android:text="@string/str_email_address"
            android:textColor="@color/color_1"
            android:textSize="@dimen/all_registration_text_size" />

        <EditText
            android:id="@+id/etEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/all_edittext_input_background"
            android:fontFamily="@font/lato_regular"
            android:gravity="left|start"
            android:hint="@string/str_enter_your_email_address"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:paddingBottom="@dimen/et_name_padding_bottom"
            android:singleLine="true"
            android:textColor="@color/color_login_email_input"
            android:textSize="@dimen/all_registration_hint_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_registration_text_margin_top"
            android:fontFamily="@font/lato_regular"
            android:text="@string/str_store_name"
            android:textColor="@color/color_1"
            android:textSize="@dimen/all_registration_text_size" />

        <EditText
            android:id="@+id/etStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/all_edittext_input_background"
            android:fontFamily="@font/lato_regular"
            android:gravity="left|start"
            android:hint="@string/str_enter_your_store_name"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:paddingBottom="@dimen/et_name_padding_bottom"
            android:singleLine="true"
            android:textColor="@color/color_login_email_input"
            android:textSize="@dimen/all_registration_hint_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_registration_text_margin_top"
            android:fontFamily="@font/lato_regular"
            android:text="@string/str_password"
            android:textColor="@color/color_1"
            android:textSize="@dimen/all_registration_text_size" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/all_edittext_input_background"
            android:fontFamily="@font/lato_regular"
            android:gravity="left|start"
            android:hint="@string/ste_enter_your_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="35"
            android:paddingBottom="@dimen/et_name_padding_bottom"
            android:singleLine="true"
            android:textColor="@color/color_login_email_input"
            android:textSize="@dimen/all_registration_hint_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_registration_text_margin_top"
            android:fontFamily="@font/lato_regular"
            android:text="@string/str_confirm_password"
            android:textColor="@color/color_1"
            android:textSize="@dimen/all_registration_text_size" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/all_edittext_input_background"
            android:fontFamily="@font/lato_regular"
            android:gravity="left|start"
            android:hint="@string/str_confirm_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="35"
            android:paddingBottom="@dimen/et_name_padding_bottom"
            android:singleLine="true"
            android:textColor="@color/color_login_email_input"
            android:textSize="@dimen/all_registration_hint_text_size" />
    </LinearLayout>
</LinearLayout>