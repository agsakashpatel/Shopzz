<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_background_6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Typeface_Bold"
        android:background="@color/tv_login_bg_color"
        android:gravity="center_horizontal"
        android:padding="@dimen/dialog_title_padding"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dialog_title_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ll_child_margin_top_bottom"
        android:layout_marginLeft="@dimen/ll_child_margin_left_right"
        android:layout_marginRight="@dimen/ll_child_margin_left_right"
        android:layout_marginTop="@dimen/ll_child_margin_top_bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/Typeface_Regular"
            android:text=""
            android:textColor="@color/color_1"
            android:textSize="@dimen/dialog_message_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ll_dialog_btn_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/btn_yes_margin_left_right"
                android:layout_weight="1"
                style="@style/Typeface_Bold"
                android:background="@drawable/ic_background_5"
                android:gravity="center_horizontal"
                android:padding="@dimen/dialog_title_padding"
                android:text="@string/str_cancel"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dialog_title_text_size" />

            <TextView
                android:id="@+id/tvYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_yes_margin_left_right"
                android:layout_weight="1"
                android:background="@drawable/ic_background_1"
                style="@style/Typeface_Bold"
                android:gravity="center_horizontal"
                android:padding="@dimen/dialog_title_padding"
                android:text="@string/str_yes"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dialog_title_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
