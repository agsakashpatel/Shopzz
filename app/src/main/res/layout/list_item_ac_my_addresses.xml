<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/ll_child_address_padding_top"
        android:paddingLeft="@dimen/ll_child_address_padding_left"
        android:paddingRight="@dimen/ll_child_address_padding_left"
        android:paddingTop="@dimen/ll_child_address_padding_top">

        <ImageView
            android:id="@+id/ivSelectAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/iv_check_edit_padding_top"
            android:src="@mipmap/select_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ll_desc_address_margin_left"
            android:layout_marginStart="@dimen/ll_desc_address_margin_left">

            <LinearLayout
                android:id="@+id/llSelectAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/llEditAddress"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAddressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/strt_home"
                    android:textColor="@color/color_8"
                    android:textSize="@dimen/tv_name_address_text_size" />

                <TextView
                    android:id="@+id/tvAddressDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:lines="1"
                    android:maxLength="45"
                    android:text="@string/str_arabian_gulf_street_dusman_kuwait_city_123"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/tv_desc_address_text_size" />

                <TextView
                    android:id="@+id/tvCountryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:singleLine="true"
                    android:text="@string/str_kuwait"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/tv_desc_address_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEditAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="@dimen/iv_edit_padding_top"
                android:paddingBottom="@dimen/iv_edit_padding_left_bottom"
                android:paddingLeft="@dimen/iv_edit_padding_left_bottom">

                <ImageView
                    android:id="@+id/ivEditIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/edit_icon" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divider_height"
        android:background="@color/color_7" />
</LinearLayout>
