<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/all_sub_title_padding">

        <ImageView
            android:id="@+id/ivSelectAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/iv_select_address_margin_right"
            android:src="@mipmap/radio_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivSelectAddress"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAddressTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="@string/strt_home"
                android:textColor="@color/color_8"
                android:textSize="@dimen/tv_address_detail_text_size" />

            <TextView
                android:id="@+id/tvAddressDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:lines="1"
                android:maxLength="45"
                android:text="@string/str_arabian_gulf_street_dusman_kuwait_city_123"
                android:textColor="@color/color_1"
                android:textSize="@dimen/tv_address_detail_text_size" />

            <TextView
                android:id="@+id/tvCountryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:singleLine="true"
                android:text="@string/str_kuwait"
                android:textColor="@color/color_1"
                android:textSize="@dimen/tv_address_detail_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divider_height"
        android:background="@color/colorGray" />

</LinearLayout>