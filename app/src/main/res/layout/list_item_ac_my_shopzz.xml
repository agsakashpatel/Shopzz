<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_margin="@dimen/recycler_view_item_layout_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivStoreLogo"
        android:layout_width="@dimen/iv_store_logo_width_height"
        android:layout_height="@dimen/iv_store_logo_width_height"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/checkbox_checked"/>

    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:gravity="center_horizontal"
        android:text="Store"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/tv_store_margin_top"
        android:textSize="@dimen/tv_store_text_size" />
</LinearLayout>
