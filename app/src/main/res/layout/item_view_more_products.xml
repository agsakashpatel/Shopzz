<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recycler_view_item_layout_margin"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_background_8">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="@dimen/iv_see_more_product_width"
            android:layout_height="@dimen/iv_see_more_product_height"
            android:scaleType="fitXY"
            android:src="@drawable/product_image_big" />

        <LinearLayout
            android:id="@+id/llFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/ivFavourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/iv_favourite_layout_margin"
                android:src="@mipmap/heart_normal" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="@string/str_monalisa_painting"
            android:textColor="@color/color_8"
            android:textSize="@dimen/tv_produc_name_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="@string/str__99_kd"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/tv_price_text_size" />

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_store_name_margin_left"
                android:fontFamily="@font/lato_regular"
                android:lines="1"
                android:text="by ArtFuel"
                android:textColor="@color/color_1"
                android:textSize="@dimen/tv_price_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
