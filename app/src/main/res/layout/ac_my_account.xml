<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_login_bg_color"
    android:orientation="vertical"
    android:paddingTop="@dimen/ll_parent_margin_top"
    tools:context=".activity.MyAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tv_login_bg_color"
        android:padding="@dimen/rl_account_title_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_regular"
            android:text="@string/str_khaled_huwaishel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/tv_account_name_text_size" />

        <ImageView
            android:id="@+id/ivSettingOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/settings_icon"
            android:onClick="onViewClick"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onViewClick"
            android:paddingBottom="@dimen/rl_accounts_options_padding_top_bottom"
            android:paddingLeft="@dimen/rl_accounts_options_padding_left_right"
            android:paddingRight="@dimen/rl_accounts_options_padding_left_right"
            android:paddingTop="@dimen/rl_accounts_options_padding_top_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="@string/str_account"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/tv_accounts_options_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_divider_height"
            android:background="@color/color_1" />

        <RelativeLayout
            android:id="@+id/rlMyAddresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onViewClick"
            android:paddingBottom="@dimen/rl_accounts_options_padding_top_bottom"
            android:paddingLeft="@dimen/rl_accounts_options_padding_left_right"
            android:paddingRight="@dimen/rl_accounts_options_padding_left_right"
            android:paddingTop="@dimen/rl_accounts_options_padding_top_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="@string/str_my_addresses"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/tv_accounts_options_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_divider_height"
            android:background="@color/color_1" />

        <RelativeLayout
            android:id="@+id/rlMyOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onViewClick"
            android:paddingBottom="@dimen/rl_accounts_options_padding_top_bottom"
            android:paddingLeft="@dimen/rl_accounts_options_padding_left_right"
            android:paddingRight="@dimen/rl_accounts_options_padding_left_right"
            android:paddingTop="@dimen/rl_accounts_options_padding_top_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="@string/str_my_orders"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/tv_accounts_options_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_divider_height"
            android:background="@color/color_1" />

        <RelativeLayout
            android:id="@+id/rlMyShopzz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onViewClick"
            android:paddingBottom="@dimen/rl_accounts_options_padding_top_bottom"
            android:paddingLeft="@dimen/rl_accounts_options_padding_left_right"
            android:paddingRight="@dimen/rl_accounts_options_padding_left_right"
            android:paddingTop="@dimen/rl_accounts_options_padding_top_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="@string/str_my_shopzz"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/tv_accounts_options_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_divider_height"
            android:background="@color/color_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:padding="@dimen/rl_account_title_padding"
            android:text="@string/str_my_likes"
            android:textColor="@color/colorLightBlack"
            android:textSize="@dimen/tv_account_name_text_size" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>